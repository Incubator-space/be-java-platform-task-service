<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create_table_taskToAttachment" author="Nikita Pantyuhin">
        <createTable tableName="comments_to_attachments">

            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="comment_id" type="uuid">
                <constraints nullable="false"/>
            </column>

            <column name="attachment_id" type="uuid">
                <constraints nullable="false"/>
            </column>

        </createTable>

        <addForeignKeyConstraint baseColumnNames="comment_id" baseTableName="comments_to_attachments"
                                 constraintName="fk_comment_to_attachments_comment_id" referencedColumnNames="id"
                                 referencedTableName="comments"/>
    </changeSet>
</databaseChangeLog>